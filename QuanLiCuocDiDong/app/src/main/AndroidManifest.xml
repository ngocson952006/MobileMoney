<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.uit.chichssssteam.quanlicuocdidong" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ChonMangDiDongActivity"
            android:label="@string/title_activity_chon_mang_di_dong"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".Activity.ChonGoiCuocActivity"
            android:label="@string/title_activity_chon_goi_cuoc"
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Activity.KhuyenMaiActivity"
            android:label="@string/title_activity_khuyen_mai"
            android:theme="@android:style/Theme.Holo.Light" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity" />
        </activity>
        <activity
            android:name=".Activity.UngTienActivity"
            android:label="@string/title_activity_ung_tien"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".Activity.YeuCauGoiLaiActivity"
            android:label="@string/title_activity_yeu_cau_goi_lai"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".Activity.TraCuuTTTBActivity"
            android:label="@string/title_activity_tra_cuu_tttb"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".Activity.KiemTraSoDuActivity"
            android:label="@string/title_activity_kiem_tra_so_du"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>

        <receiver android:name=".BackgroundService.PhoneStateReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name=".Activity.DayDetailActivity"
            android:label="@string/title_activity_day_detail"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
